<!DOCTYPE html>
<html>
  <head>
    <title>Not Twitter</title>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'https://code.jquery.com/jquery-3.5.1.min.js' %>
    <%= javascript_include_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'https://getbootstrap.com/docs/4.0/dist/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="content" class="d-flex" style="height: 100vh">
      <div class="centering-sidebar"></div>
      <!-- Sidebar -->
      <div id="nav">
        <ul class="navbar-nav mr-auto">
          <li><%= link_to "Home", home_path %></li>
          <li><%= link_to "Tweet", new_tweet_path %></li>
          <li><%= link_to "About", about_path %></li>
          <li>
            <% if signed_in? %>
              <p>Signed in as:</p>
              <p><%= current_user.name %></p>
              <p><%= current_user.username %></p>
              <%= button_to 'Sign out', sign_out_path, method: :delete %>
            <% else %>
              <%= link_to 'Sign in', sign_in_path %>
            <% end %>
          </li>
        </ul>
      </div>
      <!-- Content -->
  <!--    Max width 600px-->
      <div id="main">
        <%= yield %>
      </div>
      <!-- Sidebar -->
  <!--    width 350px-->
      <div id="side">
        <div id="flash">
          <% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
          <% end %>
        </div>
      </div>
      <div class="centering-sidebar"></div>
    </div>
  </body>
</html>
